<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/id_fl_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:padding="8dp"
            android:visibility="gone"
            android:id="@+id/id_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前监听服务未开启"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#444"/>

        <LinearLayout
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/id_fl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/id_ll_index"
                android:padding="4dp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="首页" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_ll_usm"
                android:padding="4dp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="用户管理" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_ll_om"
                android:padding="4dp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="30dp"
                    android:text="订单管理" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_ll_me"
                android:padding="4dp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:text="我的" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>