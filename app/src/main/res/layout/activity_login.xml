<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="150dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="登录"/>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="#444"
                android:padding="12dp"
                android:src="@mipmap/icon_username"/>
            <EditText
                android:id="@+id/id_et_userName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入用户名"
                android:textColorHint="#444"
                android:background="@null"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#3A3838"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="#444"
                android:padding="12dp"
                android:src="@mipmap/icon_password"/>
            <EditText
                android:id="@+id/id_et_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:hint="请输入登录密码"
                android:textColorHint="#444"
                android:inputType="textPassword"
                android:background="@null"/>

            <ImageView
                android:id="@+id/id_viewPwd"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/icon_view_pwd"
                android:padding="8dp"
                android:tint="#444"/>
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#3A3838"/>

        <CheckBox
            android:checked="true"
            android:id="@+id/id_cb_rmbAc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="记住账号"/>

        <TextView
            android:id="@+id/id_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="登录"
            android:gravity="center"
            android:textColor="#Fff"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:background="@drawable/shape_login_btn"/>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="注册账号"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:textColor="#444"
                android:textSize="16sp"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>