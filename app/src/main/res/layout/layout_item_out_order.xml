<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_item_bg"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="4dp"
    android:paddingRight="16dp"
    android:layout_marginTop="12dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#969696"
            android:text="订单号:"/>
        <TextView
            android:id="@+id/id_item_order_num"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:textColor="#0D0D0D"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12321435346346436"/>

    </LinearLayout>

    <LinearLayout
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#969696"
            android:text="外部订单号:"/>
        <TextView
            android:id="@+id/id_item_order_out_num"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:textColor="#0D0D0D"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12321435346346436"/>

    </LinearLayout>

    <LinearLayout
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#969696"
            android:text="订单生成时间:"/>
        <TextView
            android:id="@+id/id_item_order_create_time"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:textColor="#0D0D0D"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019/11/09 11:03:14"/>
    </LinearLayout>

    <LinearLayout
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#969696"
            android:text="支付码商名:"/>
        <TextView
            android:id="@+id/id_item_order_code_name"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:textColor="#0D0D0D"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="码商1"/>
    </LinearLayout>
    <LinearLayout
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#969696"
            android:text="支付通道:"/>
        <TextView
            android:id="@+id/id_item_order_channel_name"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:textColor="#0D0D0D"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"/>
    </LinearLayout>
    <LinearLayout
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#969696"
            android:text="支付设备号:"/>
        <TextView
            android:id="@+id/id_item_order_equi_name"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:textColor="#0D0D0D"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"/>
    </LinearLayout>
    <LinearLayout
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#969696"
            android:text="掉单处理时间:"/>
        <TextView
            android:id="@+id/id_item_order_complete_time"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:textColor="#0D0D0D"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019/01/01 12:12:15"/>
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F0F0F0"/>


    <LinearLayout
        android:padding="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#969696"
            android:text="订单金额:"/>
        <TextView
            android:id="@+id/id_item_order_price"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            android:textColor="#FD0000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥1499.00"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#969696"
            android:text="支付金额:"/>
        <TextView
            android:id="@+id/id_item_pay_price"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            android:textColor="#FD0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥1499.00"/>

    </LinearLayout>



</LinearLayout>