<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="80dp"
        android:paddingTop="30dp"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/id_tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="查看子通道"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#101010"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/id_back"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_back"
            android:tint="#101010"
            android:padding="16dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e5e5e5"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/id_ll_t_view"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <EditText
            android:id="@+id/id_et_sTime"
            android:inputType="time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingRight="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edit"
            android:drawableRight="@mipmap/icon_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="一"
            android:textColor="#bbb"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/id_et_eTime"
            android:layout_marginLeft="10dp"
            android:inputType="time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingRight="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edit"
            android:drawableRight="@mipmap/icon_time"/>
    </LinearLayout>
    <TextView
        android:id="@+id/id_channel_name"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通道名称"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#101010"
        android:layout_marginLeft="20dp"/>


    <LinearLayout
        android:background="@drawable/shape_edit"
        android:layout_margin="8dp"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="码商名称"
            android:textColor="#101010"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <ImageView
            android:src="@mipmap/icon_add_img"
            android:id="@+id/id_iv_pay_code"
            android:layout_marginTop="16dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:gravity="right"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_del"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingTop="8dp"
                android:textColor="#fff"
                android:background="@drawable/shape_del_btn"
                android:paddingBottom="8dp"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>